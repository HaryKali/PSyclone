# This is a gocean1.0 specific configuration file used in various tests.
# It tests that 'gocean1.0' is picked as api even without an API= keyword
# (since there is only one API-specific section)
[DEFAULT]
DEFAULTSTUBAPI = dynamo0.3
DISTRIBUTED_MEMORY = false
REPRODUCIBLE_REDUCTIONS = false
# Amount to pad the local summation array when REPRODUCIBLE_REDUCTIONS is true
REPROD_PAD_SIZE = 8

[gocean1.0]
iteration-spaces=go_offset_sw:go_ct:internal_we_halo:1:2:3:4
                 go_offset_sw:go_ct:internal_ns_halo:{start}:{stop}:1:{stop}+1
                 go_offset_sw:go_ct:n_halo:{start}:{start}:{start}:{stop}+1
                 go_offset_sw:go_ct:north_east_corner:{start}-2:{start}-1:{stop}:{stop}+1

field-properties = go_grid_xstop: {0}%%grid%%subdomain%%internal%%xstop: scalar,
                   go_grid_ystop: {0}%%grid%%subdomain%%internal%%ystop: scalar,
                   go_grid_area_t: {0}%%grid%%area_t: array,
                   go_grid_area_u: {0}%%grid%%area_u: array,
                   go_grid_area_v: {0}%%grid%%area_v: array,
                   go_grid_mask_t: {0}%%grid%%tmask: array,
                   go_grid_dx_t: {0}%%grid%%dx_t: array,
                   go_grid_dx_u: {0}%%grid%%dx_u: array,
                   go_grid_dx_v: {0}%%grid%%dx_v: array,
                   go_grid_dy_t: {0}%%grid%%dy_t: array,
                   go_grid_dy_u: {0}%%grid%%dy_u: array,
                   go_grid_dy_v: {0}%%grid%%dy_v: array,
                   go_grid_lat_u: {0}%%grid%%gphiu: array,
                   go_grid_lat_v: {0}%%grid%%gphiv: array,
                   go_grid_dx_const: {0}%%grid%%dx: scalar,
                   go_grid_dy_const: {0}%%grid%%dy: scalar,
                   go_grid_x_min_index: {0}%%grid%%subdomain%%internal%%xstart: scalar,
                   go_grid_x_max_index: {0}%%grid%%subdomain%%internal%%xstop: scalar,
                   go_grid_y_min_index: {0}%%grid%%subdomain%%internal%%ystart: scalar,
                   go_grid_y_max_index: {0}%%grid%%subdomain%%internal%%ystop: scalar

access_mapping = go_read: read, go_write: write, go_readwrite: readwrite,
                 go_inc: inc, go_sum: sum

